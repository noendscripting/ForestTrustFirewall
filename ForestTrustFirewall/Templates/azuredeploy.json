      //      }
      //    }
      //  }
      //]
    },
    {
      "name": "[variables('VMNames')[1]]",
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2017-03-30",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Network/networkInterfaces/', variables('DC2networkInterfaceName'))]"
      ],
      "tags": {
        "displayName": "DC2"
      },
      "properties": {
        "osProfile": {
          "computerName": "[variables('VMNames')[1]]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "hardwareProfile": {
          "vmSize": "[parameters('virtualMachineSize')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "MicrosoftWindowsServer",
            "offer": "WindowsServer",
            "sku": "[parameters('sku')]",
            "version": "latest"
          },
          "osDisk": {
            "createOption": "FromImage",
            "caching": "ReadWrite"
          },
                
          "DataDisks": [
            {
              "diskSizeGB": 20,
              "lun": 0,
              "CreateOption": "Empty"
            }
              
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('DC2networkInterfaceName'))]"
            }
          ]

        }

      },
        "resources": [
