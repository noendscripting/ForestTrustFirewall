{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
  "parameters": {

    "virtualMachineSize": {
      "type": "string",
      "defaultValue": "Standard_B2s"
    },
    "adminUsername": {
      "type": "string",
      "defaultValue": "VADMIN"
    },
    "virtualNetworkName": {
      "type": "string",
      "defaultValue": "VNET02"
    },
    "adminPassword": {
      "type": "securestring",
      "defaultValue": "Test@2016"
    },
    "sku": {
      "type": "string",
      "allowedValues": [
        "2012-R2-Datacenter",
        "2016-Datacenter",
        "2008-R2-SP1"
      ],
      "defaultValue": "2012-R2-Datacenter"
    },
    "publicIpAddressType": {
      "type": "string",
      "defaultValue": "Dynamic"
    },
    "time": {
      "type": "string",
      "defaultValue": "23:00"
    },
    "dataDriveCount": {
      "type": "int",
      "minValue": 1,
      "defaultValue": 1
    },
    "GatewaySubnetPrefix": {
      "type": "string"
    },
    "VNETPrefix": {
      "type": "string"
    },
    "DC1-SubnetPrefix": {
      "type": "string"
    },
    "DC2-SubnetPrefix": {
      "type": "string"
    },
      "repositoryPath": {
      "type": "string",
      "defaultValue": "https://raw.githubusercontent.com/noendscripting/ForestTrustFirewall/master"
    },
    "domain1Name": {
      "type": "string",
      "defaultValue": "contosoad.com"
    },
    "NetBiosDomain1name": {
      "type": "string",
      "defaultValue": "contosoad"
    },
    "domain2Name": {
      "type": "string",
      "defaultValue": "fabrikam.com"
    },
    "NetBiosDomain2name": {
      "type": "string",
      "defaultValue": "fabrikam"
    },
    "passwordKeyVaultName": {
      "type": "string"
    },
    "passwordkeyVaultRG":{
      "type": "string"
    },
    "passwordKeyVaultSecret":
    {
      "type": "string"
    }
  },

  "variables": {
    "VMNames": [
      "DC1",
      "DC2",
      "FIM1",
      "ADMT"
    ],
    "vnetSubnetName": [
      "DC1-Subnet",
      "DC2-Subnet"
    ],
    "NSGNames": [
      "NSG-DC1",
      "NSG-DC2"

    ],
    "vmTemplateURI":"https://raw.githubusercontent.com/noendscripting/azuredeploy/master/vm-",
    "vnetName": "VNET-FWLAB",
    "vnetResourceGroup":"[resourceGroup().name]",
    "VnetID": "[resourceId(variables('VNETResourceGroup'),'Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
    "DC1SubnetIPArray": "[split(parameters('DC1-SubnetPrefix'),'.')]",
    "DC2SubnetIPArray": "[split(parameters('DC2-SubnetPrefix'),'.')]",
    "StaticIPList":[
      "[concat(variables('DC1SubnetIPArray')[0],'.',variables('DC1SubnetIPArray')[1],'.',variables('DC1SubnetIPArray')[2],'.','4')]",
      "[concat(variables('DC2SubnetIPArray')[0],'.',variables('DC2SubnetIPArray')[1],'.',variables('DC2SubnetIPArray')[2],'.','4')]",
      "[concat(variables('DC1SubnetIPArray')[0],'.',variables('DC1SubnetIPArray')[1],'.',variables('DC1SubnetIPArray')[2],'.','5')]",
      "[concat(variables('DC2SubnetIPArray')[0],'.',variables('DC2SubnetIPArray')[1],'.',variables('DC2SubnetIPArray')[2],'.','5')]"
    ],

    "DCConfigArchiveFileName": "dsc.zip",
    "DCConfigDataFileName": "DCConfig.psd1",
    "DscConfigurationFunction": "DcConfig",
    "DscConfigurationScript": "DC1Config.ps1",
    "projectName": "ForestTrustFirewall",
    "CustomScriptScriptFolder": "CustomScripts",
    "CustomScriptScriptFileName": "CustomScript.ps1",
    "CustomScriptScriptContent": [
      "contosoad-Users.csv",
      "fabrikam-users.csv",
      "Groups.csv",
      "Members.csv",
      "OUs.csv"
    ],
    "VMBuildParams":{
      "params":[
        {
          "virtualMachineType":"dc",
          "virtualMachineName":"DC1",
          "nicType":"Public",
          "subnetName":"[variables('vnetSubnetName')[0]]",
          "nicTemplateLink":"https://raw.githubusercontent.com/noendscripting/azuredeploy/master/static-noDNS-nic.json",
          "DnsIPAddress":"",
          "StaticIP":"[variables('StaticIPList')[0]]"
        },
        {
          "virtualMachineType":"dc",
          "virtualMachineName":"DC2",
          "nicType":"Public",
          "subnetName":"[variables('vnetSubnetName')[1]]",
          "nicTemplateLink":"https://raw.githubusercontent.com/noendscripting/azuredeploy/master/static-noDNS-nic.json",
          "DnsIPAddress":"",
          "StaticIP":"[variables('StaticIPList')[1]]"
        },
        {
          "virtualMachineName":"FM1",
          "virtualMachineType":"base",
          "nicType":"Public",
          "subnetName":"[variables('vnetSubnetName')[1]]",
          "nicTemplateLink":"https://raw.githubusercontent.com/noendscripting/azuredeploy/master/static-DNS-nic.json",
          "DnsIPAddress":"[variables('StaticIPList')[1]]",
          "StaticIP":"[variables('StaticIPList')[3]]"
        },
        {
          "virtualMachineType":"base",
          "virtualMachineName":"ADMT",
          "nicType":"Public",
          "subnetName":"[variables('vnetSubnetName')[0]]",
          "nicTemplateLink":"https://raw.githubusercontent.com/noendscripting/azuredeploy/master/static-DNS-nic.json",
          "DnsIPAddress":"[variables('StaticIPList')[0]]",
          "StaticIP":"[variables('StaticIPList')[2]]"
        }
      ]
    },
    "passwordKeyVaultId":"[resourceId(parameters('passwordkeyVaultRG'),'Microsoft.KeyVault/vaults',parameters('passwordKeyVaultName'))]",
    "DCSConfigParams":{
      "params":[
        {
          
          "domainName": "[parameters('domain1Name')]",
          "NetBiosDomainname": "[parameters('NetBiosDomain1name')]",
          "DataDiskNumber": "2",
          "DataDriveLetter": "F",
          "ForwarderIPaddress": "[variables('StaticIPList')[1]]",
          "ForwarderDomain": "[parameters('domain2Name')]"
        },
        {
            "domainName": "[parameters('domain2Name')]",
            "NetBiosDomainname": "[parameters('NetBiosDomain2name')]",
            "DataDiskNumber": "2",
            "DataDriveLetter": "F",
            "ForwarderIPaddress": "[variables('StaticIPList')[0]]",
            "ForwarderDomain": "[parameters('domain1Name')]"
        }
      ] 
    }

  },
  "resources": [
   
    // NSG DC1
    {
      "comments": "# NSG",
      "name": "[variables('NSGNames')[0]]",
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Network/networkSecurityGroups",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "NSG1"
      },
      "properties": {
        "securityRules": [
          {
            "name": "default-allow-rdp-in",
            "properties": {
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "3389",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 1000,
              "direction": "Inbound"
            }
          },
          {
            "name": "default-allow-winrm-in",
            "properties": {
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "5986",
              "sourceAddressPrefix": "Internet",
              "destinationAddressPrefix": "VirtualNetwork",
              "access": "Allow",
              "priority": 1500,
              "direction": "Inbound"
            }
          },
          {
            "name": "allow-in-vnet-only",
            "properties": {
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "*",
              "sourceAddressPrefix": "VirtualNetwork",
              "destinationAddressPrefix": "VirtualNetwork",
              "access": "Allow",
              "priority": 1600,
              "direction": "Inbound"
            }
          },
          {
            "name": "allow-out-vnet-only",
            "properties": {
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "*",
              "sourceAddressPrefix": "VirtualNetwork",
              "destinationAddressPrefix": "VirtualNetwork",
              "access": "Allow",
              "priority": 1700,
              "direction": "Outbound"
            }
          },
          {
            "name": "allow-out-443-internet",
            "properties": {
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "443",
              "sourceAddressPrefix": "VirtualNetwork",
              "destinationAddressPrefix": "Internet",
              "access": "Allow",
              "priority": 1800,
              "direction": "Outbound"
            }
          }
        ]
      }
    },
    // NSG DC2
    {
      "comments": "# NSG",
      "name": "[variables('NSGNames')[1]]",
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Network/networkSecurityGroups",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "NSG2"
      },
      "properties": {
        "securityRules": [
          {
            "name": "default-allow-rdp-in",
            "properties": {
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "3389",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 1000,
              "direction": "Inbound"
            }
          },
          {
            "name": "default-allow-winrm-in",
            "properties": {
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "5986",
              "sourceAddressPrefix": "Internet",
              "destinationAddressPrefix": "VirtualNetwork",
              "access": "Allow",
              "priority": 1500,
              "direction": "Inbound"
            }
          },
          {
            "name": "allow-in-vnet-only",
            "properties": {
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "*",
              "sourceAddressPrefix": "VirtualNetwork",
              "destinationAddressPrefix": "VirtualNetwork",
              "access": "Allow",
              "priority": 1600,
              "direction": "Inbound"
            }
          },
          {
            "name": "allow-out-vnet-only",
            "properties": {
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "*",
              "sourceAddressPrefix": "VirtualNetwork",
              "destinationAddressPrefix": "VirtualNetwork",
              "access": "Allow",
              "priority": 1700,
              "direction": "Outbound"
            }
          }

        ]
      }
    },
    //VNET Settings
    {
      "name": "[variables('VNETname')]",
      "type": "Microsoft.Network/virtualNetworks",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "dependsOn": [
        "[concat('Microsoft.Network/networkSecurityGroups/',variables('NSGNames')[0])]",
        "[concat('Microsoft.Network/networkSecurityGroups/',variables('NSGNames')[1])]"
      ],
      "tags": {
        "displayName": "VNET"
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('VNETPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "GatewaySubnet",
            "properties": {
              "addressPrefix": "[parameters('GatewaySubnetPrefix')]"

            }
          },
          {
            "name": "[variables('vnetSubnetName')[0]]",
            "properties": {
              "addressPrefix": "[parameters('DC1-SubnetPrefix')]",
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups',variables('NSGNames')[0])]"
              }
            }
          },
          {
            "name": "[variables('vnetSubnetName')[1]]",
            "properties": {
              "addressPrefix": "[parameters('DC2-SubnetPrefix')]",
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups',variables('NSGNames')[0])]"
              }
            }

          }
        ]
      }
    },
  
    { "name": "[concat(deployment().name,variables('VMBuildParams').params[copyIndex()].virtualMachineName)]",
      "dependsOn": [
        "[concat('Microsoft.Network/virtualNetworks/',variables('vnetName'))]"
      ],
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "copy":{
        "count":4,
        "name": "serverbuild"
      },
      "properties":{
        "mode":"Incremental",
        "templateLink":{
          "uri": "[concat(variables('vmTemplateURI'),variables('VMBuildParams').params[copyIndex()].virtualMachineType,'.json')]"
        },
        "parameters":{
          "virtualMachineName": {
            "value": "[variables('VMBuildParams').params[copyIndex()].virtualMachineName]"
          },
          "virtualMachineSize": {
            "value": "[parameters('virtualMachineSize')]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "reference":{
              "KeyVault":{
                "id":"[variables('passwordKeyVaultID')]"
              },
              "secretname":"[parameters('passwordKeyVaultSecret')]"
            }
          },
          "sku": {
            "value": "[parameters('sku')]"
          },
          "nicType":{
            "value": "[variables('VMBuildParams').params[copyIndex()].nicType]"
          },
          "VNETResourceGroup":
          {
            "value": "[variables('vnetResourceGroup')]"
          },
          "VNET": {
            "value": "[variables('vnetName')]"
          },
          "subnetName":{
            "value": "[variables('VMBuildParams').params[copyIndex()].subnetName]"
          },
          "nicTemplateLink": {
            "value":"[variables('VMBuildParams').params[copyIndex()].nicTemplateLink]"
          },
          "StaticIP":{
            "value":"[variables('VMBuildParams').params[copyIndex()].staticIp]"
          },
          "DnsIPAddress":{
            "value":"[variables('VMBuildParams').params[copyIndex()].dnsipaddress]"
          }
        }
      }

    },

