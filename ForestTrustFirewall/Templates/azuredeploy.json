{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
  "parameters": {

    "virtualMachineSize": {
      "type": "string",
      "defaultValue": "Standard_D2_v2"
    },
    "adminUsername": {
      "type": "string",
      "defaultValue": "VADMIN"
    },
    "virtualNetworkName": {
      "type": "string",
      "defaultValue": "VNET02"
    },
    "adminPassword": {
      "type": "securestring",
      "defaultValue": "Test@2016"
    },
    "sku": {
      "type": "string",
      "allowedValues": [
        "2012-R2-Datacenter",
        "2016-Datacenter",
        "2008-R2-SP1"
      ],
      "defaultValue": "2012-R2-Datacenter"
    },
    "publicIpAddressType": {
      "type": "string",
      "defaultValue": "Dynamic"
    },
    "time": {
      "type": "string",
      "defaultValue": "23:00"
    },
    "dataDriveCount": {
      "type": "int",
      "minValue": 1,
      "defaultValue": 1
    },
    "GatewaySubnetPrefix": {
      "type": "string"
    },
    "VNETPrefix": {
      "type": "string"
    },
    "DC1-SubnetPrefix": {
      "type": "string"
    },
    "DC2-SubnetPrefix": {
      "type": "string"
    },
    "_artifactsLocation": {
      "type": "string",
      "metadata": {
        "description": "Auto-generated container in staging storage account to receive post-build staging folder upload"
      },
      "defaultValue": "https://raw.githubusercontent.com/noendscripting/ForestTrustFirewall/azdevops1.0/ForestTrustFirewall/DSC/"
    },
    "_artifactsLocationSasToken": {
      "type": "securestring",
      "metadata": {
        "description": "Auto-generated token to access _artifactsLocation"
      }
    },
    "repositoryPath": {
      "type": "string",
      "defaultValue": "https://raw.githubusercontent.com/noendscripting/ForestTrustFirewall/master"
    },
    "DCConfig1UpdateTagVersion": {
      "type": "string",
      "defaultValue": "1.4",
      "metadata": {
        "description": "This value must be changed from a previous deployment to ensure the extension will run"
      }
    },
    "DCConfig2UpdateTagVersion": {
      "type": "string",
      "defaultValue": "1.4",
      "metadata": {
        "description": "This value must be changed from a previous deployment to ensure the extension will run"
      }
    },
    "domain1Name": {
      "type": "string",
      "defaultValue": "contosoad.com"
    },
    "NetBiosDomain1name": {
      "type": "string",
      "defaultValue": "contosoad"
    },
    "domain2Name": {
      "type": "string",
      "defaultValue": "fabrikam.com"
    },
    "NetBiosDomain2name": {
      "type": "string",
      "defaultValue": "fabrikam"
    }
  },

  "variables": {
    "VMNames": [
      "DC1",
      "DC2",
      "FIM1",
      "ADMT"
    ],
    "vnetSubnetName": [
      "DC1-Subnet",
      "DC2-Subnet"
    ],
    "NSGNames": [
      "NSG-DC1",
      "NSG-DC2"

    ],
    "vnetName": "VNET-FWLAB",
    "VnetID": "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]",
    "subnetRef": [
      "[concat(variables('vnetId'), '/subnets/', variables('vnetSubnetName')[0])]",
      "[concat(variables('vnetId'), '/subnets/', variables('vnetSubnetName')[1])]"
    ],
    "networkInterfacename":[
      "[concat(variables('VMNames')[1],'NIC')]",
      "[concat(variables('VMNames')[0],'NIC')]",
      "[concat(variables('VMNames')[2],'NIC')]",
      "[concat(variables('VMNames')[3],'NIC')]"

    ],
    "publicIpAddressName":[ 
      "[concat(variables('VMNames')[0],'PUBLICIP')]",
     "[concat(variables('VMNames')[1],'PUBLICIP')]",
     "[concat(variables('VMNames')[2],'PUBLICIP')]",
     "[concat(variables('VMNames')[3],'PUBLICIP')]"
    ],
    "DC1SubnetIPArray": "[split(parameters('DC1-SubnetPrefix'),'.')]",
    "DC2SubnetIPArray": "[split(parameters('DC2-SubnetPrefix'),'.')]",
    "DNSServerIP1": "[concat(variables('DC1SubnetIPArray')[0],'.',variables('DC1SubnetIPArray')[1],'.',variables('DC1SubnetIPArray')[2],'.','4')]",
    "DNSServerIP2": "[concat(variables('DC2SubnetIPArray')[0],'.',variables('DC2SubnetIPArray')[1],'.',variables('DC2SubnetIPArray')[2],'.','4')]",
    "DCConfigArchiveFileName": "dsc.zip",
    "DCConfigDataFileName": "DCConfig.psd1",
    "DscConfigurationFunction": "DcConfig",
    "DscConfigurationScript": "DC1Config.ps1",
    "projectName": "ForestTrustFirewall",
    "CustomScriptScriptFolder": "CustomScripts",
    "CustomScriptScriptFileName": "CustomScript.ps1",
    "CustomScriptScriptContent": [
      "contosoad-Users.csv",
      "fabrikam-users.csv",
      "Groups.csv",
      "Members.csv",
      "OUs.csv"
    ],
    "DCSConfigParams":{
      "Params":[
        {
          
          "domainName": "[parameters('domain1Name')]",
          "NetBiosDomainname": "[parameters('NetBiosDomain1name')]",
          "DataDiskNumber": "2",
          "DataDriveLetter": "F",
          "ForwarderIPaddress": "[variables('DNSServerIP2')]",
          "ForwarderDomain": "[parameters('domain2Name')]"
        },
        {
            "domainName": "[parameters('domain2Name')]",
            "NetBiosDomainname": "[parameters('NetBiosDomain2name')]",
            "DataDiskNumber": "2",
            "DataDriveLetter": "F",
            "ForwarderIPaddress": "[variables('DNSServerIP1')]",
            "ForwarderDomain": "[parameters('domain1Name')]"
        }
      ] 
    }

  },
  "resources": [
    {
      "name":"[concat(variables('publicIpAddressName')[copyIndex()],deployment().name)]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "properties":{
          "mode":"Incremental",
          "templateLink":{
              "uri": "https://raw.githubusercontent.com/noendscripting/azuredeploy/master/base-publicIP.json"
          },
          "parameters":{
              "publicIPData":{
                "value":{
                  "vmName":"[variables('VMNames')[copyIndex()]]",
                  "Sku": "Basic",
                  "Allocation":"Dynamic"
                }

              }
          }
      },
      "copy": {
        "name":"publicIP",
        "count": 4,
        "mode": "Parallel"
      }

  },
   
    // NSG DC1
    {
      "comments": "# NSG",
      "name": "[variables('NSGNames')[0]]",
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Network/networkSecurityGroups",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "NSG1"
      },
      "properties": {
        "securityRules": [
          {
            "name": "default-allow-rdp-in",
            "properties": {
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "3389",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 1000,
              "direction": "Inbound"
            }
          },
          {
            "name": "default-allow-winrm-in",
            "properties": {
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "5986",
              "sourceAddressPrefix": "Internet",
              "destinationAddressPrefix": "VirtualNetwork",
              "access": "Allow",
              "priority": 1500,
              "direction": "Inbound"
            }
          },
          {
            "name": "allow-in-vnet-only",
            "properties": {
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "*",
              "sourceAddressPrefix": "VirtualNetwork",
              "destinationAddressPrefix": "VirtualNetwork",
              "access": "Allow",
              "priority": 1600,
              "direction": "Inbound"
            }
          },
          {
            "name": "allow-out-vnet-only",
            "properties": {
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "*",
              "sourceAddressPrefix": "VirtualNetwork",
              "destinationAddressPrefix": "VirtualNetwork",
              "access": "Allow",
              "priority": 1700,
              "direction": "Outbound"
            }
          },
          {
            "name": "allow-out-443-internet",
            "properties": {
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "443",
              "sourceAddressPrefix": "VirtualNetwork",
              "destinationAddressPrefix": "Internet",
              "access": "Allow",
              "priority": 1800,
              "direction": "Outbound"
            }
          }
        ]
      }
    },
    // NSG DC2
    {
      "comments": "# NSG",
      "name": "[variables('NSGNames')[1]]",
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Network/networkSecurityGroups",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "NSG2"
      },
      "properties": {
        "securityRules": [
          {
            "name": "default-allow-rdp-in",
            "properties": {
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "3389",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 1000,
              "direction": "Inbound"
            }
          },
          {
            "name": "default-allow-winrm-in",
            "properties": {
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "5986",
              "sourceAddressPrefix": "Internet",
              "destinationAddressPrefix": "VirtualNetwork",
              "access": "Allow",
              "priority": 1500,
              "direction": "Inbound"
            }
          },
          {
            "name": "allow-in-vnet-only",
            "properties": {
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "*",
              "sourceAddressPrefix": "VirtualNetwork",
              "destinationAddressPrefix": "VirtualNetwork",
              "access": "Allow",
              "priority": 1600,
              "direction": "Inbound"
            }
          },
          {
            "name": "allow-out-vnet-only",
            "properties": {
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "*",
              "sourceAddressPrefix": "VirtualNetwork",
              "destinationAddressPrefix": "VirtualNetwork",
              "access": "Allow",
              "priority": 1700,
              "direction": "Outbound"
            }
          }

        ]
      }
    },
    //VNET Settings
    {
      "name": "[variables('VNETname')]",
      "type": "Microsoft.Network/virtualNetworks",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "dependsOn": [
        "[concat('Microsoft.Network/networkSecurityGroups/',variables('NSGNames')[0])]",
        "[concat('Microsoft.Network/networkSecurityGroups/',variables('NSGNames')[1])]"
      ],
      "tags": {
        "displayName": "VNET"
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('VNETPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "GatewaySubnet",
            "properties": {
              "addressPrefix": "[parameters('GatewaySubnetPrefix')]"

            }
          },
          {
            "name": "[variables('vnetSubnetName')[0]]",
            "properties": {
              "addressPrefix": "[parameters('DC1-SubnetPrefix')]",
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups',variables('NSGNames')[0])]"
              }
            }
          },
          {
            "name": "[variables('vnetSubnetName')[1]]",
            "properties": {
              "addressPrefix": "[parameters('DC2-SubnetPrefix')]",
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups',variables('NSGNames')[0])]"
              }
            }

          }
        ]
      }
    },
    //DC1 NIC
    {
      "name": "[variables('networkInterfacename')[1]]",
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2015-06-15",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        //"[concat('Microsoft.Network/publicIpAddresses/',variables('publicIpAddressName')[0])]",
        "[concat('Microsoft.Network/virtualNetworks/', variables('vnetName'))]",
        "[concat('Microsoft.Resources/deployments/',variables('publicIpAddressName')[0],deployment().name)]"
      ],
      "tags": {
        "displayName": "DC1NIC"
      },
      "properties": {
        "primary": true,
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "subnet": {
                "id": "[variables('subnetRef')[0]]"
              },
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[variables('DNSServerIP1')]",
              "publicIpAddress": {
                "id": "[resourceId('Microsoft.Network/publicIpAddresses', variables('publicIpAddressName')[0])]"
              }
            }
          }
        ]

      }
    },
    //DC2 NIC
    {
      "name": "[variables('networkInterfacename')[0]]",
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2015-06-15",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        //"[concat('Microsoft.Network/publicIpAddresses/',variables('publicIpAddressName')[1])]",
        "[concat('Microsoft.Network/virtualNetworks/', variables('vnetName'))]",
        "[concat('Microsoft.Resources/deployments/',variables('publicIpAddressName')[1],deployment().name)]"
      ],
      "tags": {
        "displayName": "DC2NIC"
      },
      "properties": {
        "primary": true,
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "subnet": {
                "id": "[variables('subnetRef')[1]]"
              },
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[variables('DNSServerIP2')]",
              "publicIpAddress": {
                "id": "[resourceId('Microsoft.Network/publicIpAddresses', variables('networkInterfacename')[1])]"
              }
            }
          }
        ]
      }
    },
    //FIM NIC
    {
      "name": "[variables('networkInterfacename')[3]]",
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2015-06-15",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Network/virtualNetworks/', variables('vnetName'))]",
        "[concat('Microsoft.Resources/deployments/',variables('publicIpAddressName')[3],deployment().name)]"
      ],
      "tags": {
        "displayName": "FIM1"
      },
      "properties": {
        "primary": true,
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "subnet": {
                "id": "[variables('subnetRef')[1]]"
              },
              "privateIPAllocationMethod": "Dynamic",
              "publicIpAddress": {
                "id": "[resourceId('Microsoft.Network/publicIpAddresses', variables('publicIpAddressName')[3])]"
              }
            }
          }
        ],
        "dnsSettings": {
          "dnsServers": "[reference(variables('networkInterfacename')[0]).ipConfigurations[0].properties.privateIPAddress]"
        }
      }
    },
    //ADMT NIC
    {
      "name": "[variables('networkInterfacename')[2]]",
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2015-06-15",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/',variables('publicIpAddressName')[2],deployment().name)]"
      ],
      "tags": {
        "displayName": "BaseVMNIC"
      },
      "properties": {
        "primary": true,
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "subnet": {
                "id": "[variables('subnetRef')[0]]"
              },
              "privateIPAllocationMethod": "Dynamic",
              "publicIpAddress": {
                "id": "[resourceId('Microsoft.Network/publicIpAddresses', variables('publicIpAddressName')[2])]"
              }
            }
          }
        ],
        "dnsSettings": {
          "dnsServers": "[reference(variables('networkInterfacename')[1]).ipConfigurations[0].properties.privateIPAddress]"
        }

      }
    },
    //DC1
    {
      "name": "[variables('VMNames')[0]]",
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2017-03-30",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Network/networkInterfaces/', variables('networkInterfacename')[1])]"
      ],
      "tags": {
        "displayName": "DC1"
      },
      "properties": {
        "osProfile": {
          "computerName": "[variables('VMNames')[0]]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "hardwareProfile": {
          "vmSize": "[parameters('virtualMachineSize')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "MicrosoftWindowsServer",
            "offer": "WindowsServer",
            "sku": "[parameters('sku')]",
            "version": "latest"
          },
          "osDisk": {
            "createOption": "FromImage",
            "caching": "ReadWrite"
          },
          "copy": [
            {
              "name": "DataDisks",
              "count": "[parameters('dataDriveCount')]",
              "input": {
                "diskSizeGB": 20,
                "lun": "[copyIndex('dataDisks')]",
                "CreateOption": "Empty"
              }
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('networkInterfacename')[1])]"
            }
          ]

        }

      },
      "resources": [
        
        {
          "name": "ImportDC1",
          "type": "extensions",
          "location": "[resourceGroup().location]",
          "apiVersion": "2016-03-30",
          "dependsOn": [
            "[resourceId('Microsoft.Compute/virtualMachines', variables('VMNames')[0])]",
            "[concat('Microsoft.Compute/virtualMachines/',variables('VMNames')[0],'/extensions/DCConfig1')]"
          ],
          "tags": {
            "displayName": "DC1ImportScript"
          },
          "properties": {
            "publisher": "Microsoft.Compute",
            "type": "CustomScriptExtension",
            "typeHandlerVersion": "1.4",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "fileUris": [
                "[concat(parameters('repositoryPath'),'/',variables('projectName'), '/', variables('CustomScriptScriptFolder'), '/', variables('CustomScriptScriptFileName'))]",
                "[concat(parameters('repositoryPath'),'/',variables('projectName'), '/', variables('CustomScriptScriptFolder'), '/', variables('CustomScriptScriptContent')[0])]",
                "[concat(parameters('repositoryPath'),'/',variables('projectName'), '/', variables('CustomScriptScriptFolder'), '/', variables('CustomScriptScriptContent')[1])]",
                "[concat(parameters('repositoryPath'),'/',variables('projectName'), '/', variables('CustomScriptScriptFolder'), '/', variables('CustomScriptScriptContent')[2])]",
                "[concat(parameters('repositoryPath'),'/',variables('projectName'), '/', variables('CustomScriptScriptFolder'), '/', variables('CustomScriptScriptContent')[3])]",
                "[concat(parameters('repositoryPath'),'/',variables('projectName'), '/', variables('CustomScriptScriptFolder'), '/', variables('CustomScriptScriptContent')[4])]"
              ],"commandToExecute": "[concat('powershell -ExecutionPolicy Unrestricted -File ',  variables('CustomScriptScriptFileName'))]"
              
            }
          }
        }
      ]
    },
    //DC2
    {
      "name": "[variables('VMNames')[1]]",
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2017-03-30",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Network/networkInterfaces/', variables('networkInterfacename')[0])]"
      ],
      "tags": {
        "displayName": "DC2"
      },
      "properties": {
        "osProfile": {
          "computerName": "[variables('VMNames')[1]]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "hardwareProfile": {
          "vmSize": "[parameters('virtualMachineSize')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "MicrosoftWindowsServer",
            "offer": "WindowsServer",
            "sku": "[parameters('sku')]",
            "version": "latest"
          },
          "osDisk": {
            "createOption": "FromImage",
            "caching": "ReadWrite"
          },

          "DataDisks": [
            {
              "diskSizeGB": 20,
              "lun": 0,
              "CreateOption": "Empty"
            }

          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('networkInterfacename')[0])]"
            }
          ]

        }

      },
      "resources": [
        {
          "name": "ImportDC2",
          "type": "extensions",
          "location": "[resourceGroup().location]",
          "apiVersion": "2016-03-30",
          "dependsOn": [
            "[resourceId('Microsoft.Compute/virtualMachines', variables('VMNames')[1])]",
            "[concat('Microsoft.Compute/virtualMachines/',variables('VMNames')[1],'/extensions/DCConfig2')]"
          ],
          "tags": {
            "displayName": "DC2ImportScript"
          },
          "properties": {
            "publisher": "Microsoft.Compute",
            "type": "CustomScriptExtension",
            "typeHandlerVersion": "1.4",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "fileUris": [
                "[concat(parameters('repositoryPath'),'/',variables('projectName'), '/', variables('CustomScriptScriptFolder'), '/', variables('CustomScriptScriptFileName'))]",
                "[concat(parameters('repositoryPath'),'/',variables('projectName'), '/', variables('CustomScriptScriptFolder'), '/', variables('CustomScriptScriptContent')[0])]",
                "[concat(parameters('repositoryPath'),'/',variables('projectName'), '/', variables('CustomScriptScriptFolder'), '/', variables('CustomScriptScriptContent')[1])]",
                "[concat(parameters('repositoryPath'),'/',variables('projectName'), '/', variables('CustomScriptScriptFolder'), '/', variables('CustomScriptScriptContent')[2])]",
                "[concat(parameters('repositoryPath'),'/',variables('projectName'), '/', variables('CustomScriptScriptFolder'), '/', variables('CustomScriptScriptContent')[3])]",
                "[concat(parameters('repositoryPath'),'/',variables('projectName'), '/', variables('CustomScriptScriptFolder'), '/', variables('CustomScriptScriptContent')[4])]"
              ],
              "commandToExecute": "[concat('powershell -ExecutionPolicy Unrestricted -File ',  variables('CustomScriptScriptFileName'))]"
            }
          }
        }
      ]
    },
    //FIM1
    {
      "name": "[variables('VMNames')[2]]",
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2017-03-30",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Network/networkInterfaces/', variables('networkInterfacename')[2])]"
      ],
      "tags": {
        "displayName": "FIM1"
      },
      "properties": {
        "osProfile": {
          "computerName": "[variables('VMNames')[2]]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]",
          "windowsConfiguration": {
            "provisionVmAgent": "true"
          }
        },
        "hardwareProfile": {
          "vmSize": "Standard_DS3_v2"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "MicrosoftSQLServer",
            "offer": "SQL2012SP3-WS2012R2",
            "sku": "Standard",
            "version": "latest"
          },
          "osDisk": {
            "createOption": "FromImage",
            "caching": "ReadWrite"
          },
          "copy": [
            {
              "name": "DataDisks",
              "count": "[parameters('dataDriveCount')]",
              "input": {
                "diskSizeGB": 100,
                "lun": "[copyIndex('dataDisks')]",
                "CreateOption": "Empty"
              }
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('networkInterfacename')[3])]"
            }
          ]

        }

      },
      "resources": [
        // Join domain - Json AD Domain Extension
        {
          "comments": "Join domain - JsonADDomainExtension",
          "apiVersion": "2015-06-15",
          "type": "extensions",
          "name": "joinDomain",
          "location": "[resourceGroup().location]",
          "dependsOn": [
            "[concat('Microsoft.Compute/virtualMachines/',variables('VMNames')[2])]",
            "[concat('Microsoft.Compute/virtualMachines/',variables('VMNames')[1],'/extensions/DCConfig2')]"
          ],
          "properties": {
            "publisher": "Microsoft.Compute",

            "type": "JsonADDomainExtension",
            "typeHandlerVersion": "1.0",
            "settings": {
              "Name": "[parameters('domain2Name')]",
              "User": "[concat(parameters('domain2Name'),'\\', parameters('AdminUserName'))]",
              "Restart": "true",
              "Options": 3
            },
            "protectedsettings": {
              "Password": "[parameters('AdminPassword')]"
            }
          }
        }
      ]
    },
    //ADMT1
    {
      "name": "[variables('VMNames')[3]]",
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2017-03-30",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Network/networkInterfaces/', variables('networkInterfacename')[3])]"
      ],
      "tags": {
        "displayName": "ADMT"
      },
      "properties": {
        "osProfile": {
          "computerName": "[variables('VMNames')[3]]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]",
          "windowsConfiguration": {
            "provisionVmAgent": "true"
          }
        },
        "hardwareProfile": {
          "vmSize": "[parameters('virtualMachineSize')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "MicrosoftWindowsServer",
            "offer": "WindowsServer",
            "sku": "[parameters('sku')]",
            "version": "latest"
          },
          "osDisk": {
            "createOption": "FromImage",
            "caching": "ReadWrite"
          },
          "copy": [
            {
              "name": "DataDisks",
              "count": "[parameters('dataDriveCount')]",
              "input": {
                "diskSizeGB": 20,
                "lun": "[copyIndex('dataDisks')]",
                "CreateOption": "Empty"
              }
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('ADMTnetworkInterfaceName'))]"
            }
          ]

        }

      },
      "resources": [
        // Join domain - Json AD Domain Extension
        {
          "comments": "Join domain - JsonADDomainExtension",
          "apiVersion": "2015-06-15",
          "type": "extensions",
          "name": "joinDomain",
          "location": "[resourceGroup().location]",
          "dependsOn": [
            "[concat('Microsoft.Compute/virtualMachines/',variables('VMNames')[3])]",
            "[concat('Microsoft.Compute/virtualMachines/',variables('VMNames')[0],'/extensions/DCConfig1')]"
          ],
          "properties": {
            "publisher": "Microsoft.Compute",

            "type": "JsonADDomainExtension",
            "typeHandlerVersion": "1.0",
            "settings": {
              "Name": "[parameters('domain2Name')]",
              "User": "[concat(parameters('domain1Name'),'\\', parameters('AdminUserName'))]",
              "Restart": "true",
              "Options": 3
            },
            "protectedsettings": {
              "Password": "[parameters('AdminPassword')]"
            }
          }
        }
      ]
    },
    //DSC Extension
    {
      "name":"[concat(variables('VMNames')[copyIndex()],'/DCConfig',add(copyIndex(),1))]",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "apiVersion": "2019-03-01",
      "location":"[resourceGroup().location]",
      "tags": {
        "DisplayName":"DCSextension"
      },
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/', variables('VMNames')[1])]",
        "[concat('Microsoft.Compute/virtualMachines/', variables('VMNames')[0])]"
      ],
      "properties":{
        "publisher": "Microsoft.Powershell",
        "type": "DSC",
        "typeHandlerVersion": "2.76",
        "autoUpgradeMinorVersion": true,
        "forceUpdateTag": "[parameters('DCConfig1UpdateTagVersion')]",
        "settings": {
          "configuration":{
            "url":"[concat(parameters('_artifactsLocation'),variables('DCConfigArchiveFileName'))]",
            "script":"[variables('DscConfigurationScript')]",
            "function":"[variables('DscConfigurationFunction')]"
          },
          "configurationArguments": {
            "nodeName": "localhost",
            "domainName": "[variables('DCSConfigParams').Params[copyIndex()].domainName]",
            "NetBiosDomainname": "[variables('DCSConfigParams').Params[copyIndex()].NetBiosDomainname]",
            "DomainAdminCredentials": {
              "UserName": "[parameters('AdminUserName')]",
              "Password": "PrivateSettingsRef:DomainAdminPassword"
            },
            "DataDiskNumber": "[variables('DCSConfigParams').Params[copyIndex()].DataDiskNumber]",
            "DataDriveLetter": "[variables('DCSConfigParams').Params[copyIndex()].DataDriveLetter]",
            "ForwarderIPaddress": "[variables('DCSConfigParams').Params[copyIndex()].ForwarderIPaddress]",
            "ForwarderDomain": "[variables('DCSConfigParams').Params[copyIndex()].ForwarderDomain]"

          },
          "configurationData":{
            "url":"[concat(parameters('repositoryPath'),'/',variables('projectName'), '/DSC/', variables('DCConfigDataFileName'))]"

          }
        },
        "protectedSettings": {
          "items": {
            "DomainAdminPassword": "[parameters('AdminPassword')]"
          }
        }
      },
      "copy": {
        "name": "DCConfig",
        "count": 2
      }

    }

  ],
    "outputs": {
    }
  }
